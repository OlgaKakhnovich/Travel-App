<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".ProfilFragment">

<!--main-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="12dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kwadrat"
            android:visibility="visible" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="User name"
            android:textSize="22dp"
            android:textColor="@color/purple_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User city"
            android:textSize="15dp"
            android:textColor="@color/purple_dark"
            android:textStyle="italic" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/procent_world"
            android:fontFamily="@font/afacad"
            android:textSize="21dp"
            android:textColor="@color/purple_dark"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/procent_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/afacad"
            android:layout_marginHorizontal="5dp"
            android:text="00"
            android:textColor="@color/purple_dark"
            android:textSize="21dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/afacad"
            android:textColor="@color/purple_dark"
            android:text="%"
            android:textSize="21dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_width="363dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/afacad"
        android:gravity="center_horizontal"
        android:text="Odwiedzono"
        android:textColor="@color/purple_dark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!--horizontal-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
       android:gravity="center_horizontal"
       >
       <!--vertical-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginHorizontal="50dp">

           <TextView
               android:id="@+id/count_country_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="Krajów:"
               android:textColor="@color/purple_dark"
               android:textSize="18dp"
               android:gravity="center"
               android:textStyle="bold"
               />

           <TextView
               android:id="@+id/count_country"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="00"
               android:gravity="center"
               android:textColor="@color/purple_dark"
               android:textSize="30sp"
               android:textStyle="bold" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginHorizontal="50dp">


           <TextView
               android:id="@+id/count_city_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="Miast:"
               android:textColor="@color/purple_dark"
               android:textSize="18dp"
               android:gravity="center"
               android:textStyle="bold"
               />

           <TextView
               android:id="@+id/count_city"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="00"
               android:gravity="center"
               android:textColor="@color/purple_dark"
               android:textSize="30sp"
               android:textStyle="bold" />

       </LinearLayout>



   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/przycisk"
        android:backgroundTint="@color/white"
        android:padding="12dp">
        <!-- Pole O Mnie -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/afacad"
            android:text="@string/about_"
            android:textColor="@color/purple_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/afacad"
                android:hint="Nie jestem leniwy, po prostu działam w trybie oszczędzania energii."
                android:textColor="@color/purple_dark"
                android:textSize="17sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/mini_map"
        android:layout_width="wrap_content"
        android:layout_height="197dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">
        <!-- Pole Mapa -->

        <ImageView
            android:id="@+id/map"
            android:layout_width="362dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/map_low" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">
        <!-- Pole Przyciscki -->

        <Button
            android:id="@+id/add_place"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/orange3"
            android:fontFamily="@font/afacad"
            android:text="@string/add_place"
            android:textColor="@color/purple_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_wish"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/orange3"
            android:text="@string/add_wish"
            android:fontFamily="@font/afacad"
            android:textColor="@color/purple_dark"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <!-- Pole Przyciscki -->

        <Button
            android:id="@+id/tripList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:textColor="@color/purple_dark"
            android:text="@string/my_trip"
            android:fontFamily="@font/afacad"
            android:backgroundTint="@color/orange3"
            android:textSize="16sp"
            android:textStyle="bold"/>

</LinearLayout>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>