<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ProfilFragment">

<!--main-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kwadrat"
            android:visibility="visible" />

        <TextView
            android:id="@+id/img_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User name"
            android:textColor="@color/purple_dark"
            android:textStyle="italic" />

    </LinearLayout>

    <!--horizontal-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="12dp"
       android:layout_marginTop="24dp"
       android:gravity="center_horizontal"
       >
       <!--vertical-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginHorizontal="12dp">

           <TextView
               android:id="@+id/count_country_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="@string/count_country"
               android:textColor="@color/purple_dark"
               android:textSize="10dp"
               android:gravity="center"
               android:textStyle="bold"
               />

           <TextView
               android:id="@+id/count_country"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="00"
               android:gravity="center"
               android:textColor="@color/purple_dark"
               android:textSize="30sp"
               android:textStyle="bold" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginHorizontal="12dp">


           <TextView
               android:id="@+id/count_city_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="@string/count_city"
               android:textColor="@color/purple_dark"
               android:textSize="10dp"
               android:gravity="center"
               android:textStyle="bold"
               />

           <TextView
               android:id="@+id/count_city"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="00"
               android:gravity="center"
               android:textColor="@color/purple_dark"
               android:textSize="30sp"
               android:textStyle="bold" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginHorizontal="12dp">


           <TextView
               android:id="@+id/count_favorite_city_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="@string/count_favorite_city"
               android:textColor="@color/purple_dark"
               android:textSize="10dp"
               android:gravity="center"
               android:textStyle="bold"
               />

           <TextView
               android:id="@+id/count_favorite_city"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/afacad"
               android:text="00"
               android:gravity="center"
               android:textColor="@color/purple_dark"
               android:textSize="30sp"
               android:textStyle="bold" />

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:padding="12dp">
        <!-- Pole O Mnie -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/afacad"
            android:text="@string/about"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/star_id_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/afacad"
                android:hint="Nie jestem leniwy, po prostu działam w trybie oszczędzania energii."
                android:textColor="@color/black"
                android:textSize="17sp" />

    </LinearLayout>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>