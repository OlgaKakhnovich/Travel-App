<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".ProfilFragment">

<!--main-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="17dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kwadrat"
            android:visibility="visible"
            app:shapeAppearanceOverlay="@style/circleImage" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="User name"
            android:textSize="20sp"
            android:textColor="@color/purple_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="User city"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/purple_dark"
            android:textStyle="italic" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left|center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/afacad"
                android:text="@string/procent_world"
                android:textColor="@color/purple_dark"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/procent_world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/afacad"
                android:text="0"
                android:textColor="@color/purple_dark"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/afacad"
                android:text="%"
                android:textColor="@color/purple_dark"
                android:textSize="21dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end|center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/count_country_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:gravity="center"
                    android:text="@string/countries"
                    android:textColor="@color/purple_dark"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/count_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/purple_dark"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/count_city_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:gravity="center"
                    android:text="@string/cities"
                    android:textColor="@color/purple_dark"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/count_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/purple_dark"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/przycisk"
        android:backgroundTint="@color/white"
        android:padding="12dp">
        <!-- Pole O Mnie -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/afacad"
            android:text="@string/about_"
            android:textColor="@color/purple_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/afacad"
                android:hint="Nie jestem leniwy, po prostu działam w trybie oszczędzania energii."
                android:textColor="@color/purple_dark"
                android:textSize="17sp" />

    </LinearLayout>

    <Button
        android:id="@+id/tripList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_dark"
        android:text="@string/my_trip"
        android:fontFamily="@font/afacad"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/orange3"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/mini_map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">
        <!-- Pole Mapa -->

        <ImageView
            android:id="@+id/map"
            android:layout_width="370dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/map_low"
            android:contentDescription="Mapa Świata"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">
        <!-- Pole Przyciscki -->

        <Button
            android:id="@+id/add_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange3"
            android:fontFamily="@font/afacad"
            android:layout_weight="1"
            android:text="@string/add_place"
            android:textColor="@color/purple_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_wish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/orange3"
            android:text="@string/add_wish"
            android:fontFamily="@font/afacad"
            android:layout_marginLeft="10dp"
            android:textColor="@color/purple_dark"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>