<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:fontFamily="@font/afacad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/listImage"
            android:src="@drawable/samolot"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            app:shapeAppearanceOverlay="@style/roundImage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="26dp">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/list_city_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Miasto"
                android:fontFamily="@font/afacad"
                android:textColor="@color/purple_dark"
                android:textSize="21sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/list_comma_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textColor="@color/purple_dark"
                android:text=","
                android:fontFamily="@font/afacad"
                android:textStyle="bold"
                android:textSize="21sp" />


            <TextView
                android:id="@+id/list_country_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:textColor="@color/purple_dark"
                android:fontFamily="@font/afacad"
                android:hint="Kraj"
                android:textStyle="bold"
                android:textSize="21sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <TextView
                android:id="@+id/date_from_id"
                android:layout_width="wrap_content"
                android:fontFamily="@font/afacad"
                android:layout_height="wrap_content"
                android:hint="data od"
                android:textColor="@color/purple_dark"
                android:textSize="13sp"
               />


            <TextView
                android:id="@+id/dash_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/afacad"
                android:textColor="@color/purple_dark"
                android:text="-"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/date_to_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_dark"
                android:hint="data do"
                android:fontFamily="@font/afacad"
                android:textSize="13sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center">


            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/star"/>

            <TextView
                android:id="@+id/star_id"
                android:layout_width="wrap_content"
                android:fontFamily="@font/afacad"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:hint="4"
                android:textColor="@color/purple_dark"
                android:textSize="17sp"
                />

        </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/baseline_arrow_right_24" />


    </LinearLayout>

</androidx.cardview.widget.CardView>