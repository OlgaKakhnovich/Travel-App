<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_fragm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/logowanie2"
    tools:context=".SignInFragment">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="-150dp"
        android:padding="24dp">


        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="@color/orange_text"
            android:textSize="32sp"
            android:fontFamily="@font/afacad"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_circle"
            android:hint="@string/email"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/afacad"
            android:textColorHint="@color/purple_dark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/passw"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_circle"
            android:drawablePadding="5dp"
            android:hint="@string/passw"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/afacad"
            android:textColorHint="@color/purple_dark"
            android:textSize="14sp" />

        <Button
            android:id="@+id/logbutton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/orange_dark_dark"
            android:text="@string/login2"
            android:fontFamily="@font/afacad"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/notpassw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/notpassw"
            android:fontFamily="@font/afacad"
            android:textAlignment="center"
            android:textColor="@color/orange2"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/signup"
            android:fontFamily="@font/afacad"
            android:textAlignment="center"
            android:textColor="@color/orange2"
            android:textSize="12sp" />



    </LinearLayout>
</LinearLayout>