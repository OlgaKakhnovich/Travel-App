<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_trip_fragm"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTripFragment">



    <!-- Tło obrazka -->
    <ImageButton
        android:id="@+id/add_headerImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:backgroundTint="@color/orange1"
        android:src="@drawable/add"
        android:scaleType="centerInside"
    android:scaleX="3"
    android:scaleY="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <!-- Dolna część z detalami i opiniami -->
    <LinearLayout
        android:id="@+id/add_detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/add_headerImage">


        <Button
            android:id="@+id/button_add_photos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/afacad"
            android:text="@string/add_photos"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_city"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_circle"
                android:hint="@string/add_city"
                android:backgroundTint="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:fontFamily="@font/afacad"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/add_country"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_circle"
                android:drawablePadding="5dp"
                android:hint="@string/add_country"
                android:backgroundTint="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/afacad"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/date_of_trip"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/afacad"
                    android:textColor="@color/purple_dark"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button
                    android:id="@+id/add_date_from"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_circle"
                    android:hint="@string/date_from"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/white"
                    android:paddingRight="15dp"
                    android:fontFamily="@font/afacad"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="-"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    />

                <Button
                    android:id="@+id/add_date_to"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_circle"
                    android:hint="@string/date_to"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/white"
                    android:paddingRight="15dp"
                    android:fontFamily="@font/afacad"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <!-- Pole Moje Wrażenia -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/afacad"
                android:text="@string/myopinion"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">


                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/star"
                    app:tint="@color/grey"/>
                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/star"
                    app:tint="@color/grey"/>
                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/star"
                    app:tint="@color/grey"/>
                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/star"
                    app:tint="@color/grey"/>
                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/star"
                    app:tint="@color/grey"/>


            </LinearLayout>
        </LinearLayout>


        <EditText
            android:id="@+id/add_opinion"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/przycisk"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/afacad"
            android:gravity="start|top"
            android:hint="@string/add_opinion"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/afacad"
            android:text="@string/tips"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_tips"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/afacad"
            android:padding="15dp"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="@string/add_tips"
            android:backgroundTint="@color/white"
            android:background="@drawable/przycisk"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <Button
        android:id="@+id/button_save"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/afacad"
        android:text="@string/ok"
        android:textColor="@color/white"
            android:layout_marginTop="15dp"
        android:textSize="14sp" />


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>